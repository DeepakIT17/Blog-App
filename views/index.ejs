<% include ./partials/header %>


<div id="contain" class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment">
      <% blogs.forEach(function(blog){ %>
        <div id="contain" class="ui divided items">
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>" > 
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 40) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated red button" href="/blogs/<%= blog._id %>">
                            Read More<i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
      <% }); %>
    </div>
    
</div>



<% include ./partials/footer %>